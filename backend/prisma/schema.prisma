// This is your Prisma schema file

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  name      String
  university String?
  year      Int?
  major     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  schedules     Schedule[]
  tasks         Task[]
  moodEntries   MoodEntry[]
  userActivities UserActivity[]
  reminders     Reminder[]
}

model Schedule {
  id          String      @id @default(uuid())
  userId      String
  title       String
  description String?
  startTime   DateTime
  endTime     DateTime
  type        String      @default("OTHER")  // CLASS, STUDY, BREAK, SOCIAL, EXERCISE, OTHER
  recurrence  String      @default("NONE")  // NONE, DAILY, WEEKLY, MONTHLY
  location    String?
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt

  user      User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  reminders Reminder[]

  @@index([userId, startTime])
}

model Task {
  id          String       @id @default(uuid())
  userId      String
  title       String
  description String?
  deadline    DateTime?
  priority    String       @default("MEDIUM")  // LOW, MEDIUM, HIGH, URGENT
  status      String       @default("TODO")  // TODO, IN_PROGRESS, COMPLETED, CANCELLED
  estimatedDuration Int?    // in minutes
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  completedAt DateTime?

  user      User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  reminders Reminder[]

  @@index([userId, deadline])
  @@index([userId, status])
}

model MoodEntry {
  id          String   @id @default(uuid())
  userId      String
  moodLevel   Int      // 1-10 scale
  stressLevel Int?     // 1-10 scale
  notes       String?
  timestamp   DateTime @default(now())
  activities  String?  // JSON string of activities done that day
  sleepHours  Float?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, timestamp])
}

model Activity {
  id              String          @id @default(uuid())
  name            String
  description     String
  category        String          // EXERCISE, MEDITATION, SOCIAL, OUTDOOR, CREATIVE, RELAXATION, LEARNING
  duration        Int             // in minutes
  stressReliefScore Int           // 1-10 scale
  instructions    String?
  videoUrl        String?
  imageUrl        String?
  createdAt       DateTime        @default(now())

  userActivities UserActivity[]
}

model UserActivity {
  id          String   @id @default(uuid())
  userId      String
  activityId  String
  completedAt DateTime @default(now())
  rating      Int?     // 1-5 scale, user feedback
  notes       String?

  user     User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  activity Activity @relation(fields: [activityId], references: [id])

  @@index([userId, completedAt])
}

model Reminder {
  id           String         @id @default(uuid())
  userId       String
  scheduleId   String?
  taskId       String?
  type         String         // SCHEDULE, TASK, MOOD_CHECK, BREAK, ACTIVITY
  reminderTime DateTime
  message      String
  status       String         @default("PENDING")  // PENDING, SENT, DISMISSED, SNOOZED
  createdAt    DateTime       @default(now())
  sentAt       DateTime?

  user     User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  schedule Schedule? @relation(fields: [scheduleId], references: [id], onDelete: Cascade)
  task     Task?     @relation(fields: [taskId], references: [id], onDelete: Cascade)

  @@index([userId, reminderTime, status])
}

model RelaxationTechnique {
  id           String   @id @default(uuid())
  name         String
  description  String
  duration     Int      // in minutes
  instructions String   // JSON string array
  benefits     String   // JSON string array
  difficulty   String   // beginner, intermediate, advanced
  audioUrl     String?
  videoUrl     String?
  category     String   // breathing, meditation, physical, etc.
  createdAt    DateTime @default(now())
}
