{
  "name": "project-adam",
  "version": "1.0.0",
  "description": "Student Balance - Time Management & Wellness App for Students",
  "private": true,
  "scripts": {
    "dev": "concurrently \"npm run dev:convex\" \"npm run dev:frontend\"",
    "dev:frontend": "npm run dev --prefix frontend",
    "dev:convex": "npx convex dev",
    "build": "npm run build --prefix frontend",
    "preview": "npm run preview --prefix frontend",
    "test:e2e": "npx playwright test",
    "test:e2e:ui": "npx playwright test --ui"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/exhazordinary/project-adam.git"
  },
  "dependencies": {
    "convex": "^1.30.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "concurrently": "^8.2.2"
  }
}
